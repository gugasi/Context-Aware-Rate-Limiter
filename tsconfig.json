{
  "compilerOptions": {
    "target": "ES2020", // Or ES2021, ES2022 for newer Node versions
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true, // Allows importing JSON files
    "sourceMap": true, // Generates source maps for easier debugging
    // "noUnusedLocals": true, // Optional: Helps catch unused variables
    // "noUnusedParameters": true // Optional: Helps catch unused parameters
  },
  "include": ["src/**/*"], // Specifies which files to include
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"] // Specifies which files to exclude
}